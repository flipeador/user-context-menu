<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="UserContextMenuApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:c="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    c:Ignorable="d">

    <Window.SystemBackdrop>
        <MicaBackdrop/>
    </Window.SystemBackdrop>

    <Grid Loaded="Initialize">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TitleBar -->
        <TitleBar x:Name="e_titleBar" Title="User Context Menu â€¢ Flipeador" Subtitle="1.0.3">
            <TitleBar.IconSource>
                <BitmapIconSource ShowAsMonochrome="False" UriSource="/Assets/icon.png"/>
            </TitleBar.IconSource>
            <TitleBar.RightHeader>
                <Button Click="ToggleTheme">
                    <FontIcon Glyph="&#xE793;"/>
                </Button>
            </TitleBar.RightHeader>
        </TitleBar>

        <!-- Root Frame -->
        <Frame x:Name="e_rootFrame" Grid.Row="1" NavigationFailed="OnNavigationFailed"/>
    </Grid>
</Window>
